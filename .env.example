# HabitLine Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# Supabase Configuration
# ==========================================
HABIT_SUPABASE_URL=https://your-project.supabase.co
HABIT_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
HABIT_SUPABASE_ANON_KEY=your-anon-key-here

# ==========================================
# LINE Messaging API
# ==========================================
HABIT_LINE_CHANNEL_SECRET=your-line-channel-secret
HABIT_LINE_ACCESS_TOKEN=your-line-access-token

# ==========================================
# OpenAI API
# ==========================================
HABIT_OPENAI_API_KEY=sk-your-openai-api-key

# ==========================================
# Stripe (Optional - for paid plans)
# ==========================================
HABIT_STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
HABIT_STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
HABIT_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Price IDs (map to plan names)
HABIT_STRIPE_PRICE_STANDARD=price_your-standard-price-id
HABIT_STRIPE_PRICE_PREMIUM=price_your-premium-price-id
HABIT_STRIPE_PRICE_TEAM=price_your-team-price-id

# ==========================================
# Admin Dashboard (Next.js)
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=${HABIT_SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${HABIT_SUPABASE_ANON_KEY}

# ==========================================
# Environment
# ==========================================
NODE_ENV=development
